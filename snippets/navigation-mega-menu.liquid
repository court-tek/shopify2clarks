                <div className="header3__submenu-item header3__submenu-item3">
                  <img
                    className="header3__menu-image"
                    alt=""
                    width=""
                    height=""
                    srcset="https://cdn.media.amplience.net/i/clarks/W_Sale?fmt=auto&amp;img404=imageNotFound&amp;w=256&amp;h=285&amp;qlt=default 1x, https://cdn.media.amplience.net/i/clarks/W_Sale?fmt=auto&amp;img404=imageNotFound&amp;w=384&amp;h=285&amp;qlt=default 2x"
