<div class="header4__navigation-wrapper">
  <nav class="header4__navigation">
    <ul class="header4__list">
      {%- for link in section.settings.menu.links -%}
        <li class="header4__list-item has-submenu">
          {%- if link.links != blank -%}
            <a href="#" class="header4__index{{ forloop.index }}">
              <span class="header4__link-title header4__link-title--sale">{{- link.title | escape -}}</span>
            </a>
            <div class="header4__submenu-wrapper">
              <div class="header4__submenu-delete">
                <div class="header4__submenu-item header4__submenu-grid">
                  <ul class="header4__links-list header4__section-{{ forloop.index }}">
                    {%- for childlink in link.links -%}
                      <li>
                        <a class="header4__submenu-category" href="{{ childlink.url }}">
                          {{- childlink.title | escape -}}
                        </a>
                        {%- if childlink.links != blank -%}
                          <ul>
                            {%- for grandchildlink in childlink.links -%}
                              <li class="header4__sub-list-item">
                                <a class="header4__sub-link header4__sub-link--underline" href="{{ grandchildlink.url }}">{{ grandchildlink.title | escape }}</a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}
                      </li>
                    {%- endfor -%}
                  </ul>

                  <div class="header4__submenu-item header4__submenu-item2 header4__section-3">
                    <img
                      class="header4__menu-image"
                      alt=""
                      srcset="https://cdn.media.amplience.net/i/clarks/SS25_US_EOSS_NAV_CARD?fmt=auto&amp;img404=imageNotFound&amp;w=256&amp;h=285&amp;qlt=default 1x, https://cdn.media.amplience.net/i/clarks/SS25_US_EOSS_NAV_CARD?fmt=auto&amp;img404=imageNotFound&amp;w=384&amp;h=285&amp;qlt=default 2x"
